# Microsoft Azure
AZURE_AD_CLIENT_ID=your_client_id_here
AZURE_AD_CLIENT_SECRET=your_client_secret_here
AZURE_AD_TENANT_ID=your_tenant_id_here

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# AI Provider Selection (choose one)
AI_PROVIDER=ollama                      # Options: 'ollama' or 'claude'
NEXT_PUBLIC_AI_PROVIDER=ollama          # For client-side provider display

# Ollama Configuration (required if AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Claude API Configuration (required if AI_PROVIDER=claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-sonnet-4-20250514

# Database
DATABASE_PATH=./data/app.db
